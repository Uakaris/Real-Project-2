<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Vault</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <p><a href="/exercises/new">Log a new exercise</a></p>
    <ul>
        <% 
        const latestEntries = {};
        
        exercises.forEach((exercise) => {
            if (!latestEntries[exercise.exercise] || exercise.createdAt > latestEntries[exercise.exercise].createdAt) {
                latestEntries[exercise.exercise] = exercise;
            }
        });

        Object.values(latestEntries).forEach((exercise) => { %>
            <li>
                <h2><a href="/exercises/<%= exercise._id %>"><%= exercise.exercise %></a></h2>
            </li>
        <% }) %>
    </ul>
</body>
</html>