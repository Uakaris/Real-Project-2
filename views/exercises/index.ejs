<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logbook</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Logbook</h1>
    <a href="/exercises/new">Log a new exercise</a>
        <ul>
            <% exercises.forEach((exercise) => { %>
             <li>
                <h2><%= exercise.exercise %> </h2>
                <p>Sets: <%= exercise.sets %></p>
                <p>Reps: <%= exercise.reps %></p>
                <% if (exercise.weight) { %>
                    <p><%= exercise.weight %>kg</p> 
                <% } %> 
                <% if (exercise.notes) { %>
                    <p>Notes: <%= exercise.notes %></p>
                <% } %>
                <a href="/exercises/<%= exercise._id %>/edit">Edit or Delete entry</a>
             </li>
            <% }) %>
        </ul>
</body>
</html>